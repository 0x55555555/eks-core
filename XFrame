#ifndef XFRAME_H
#define XFRAME_H

#include "XProperty"
#include "XMathVector"

namespace Eks
{

class Frame
  {
XProperties:
  XRORefProperty(Vector3D, facing);
  XRORefProperty(Vector3D, up);
  XRORefProperty(Vector3D, across);

public:
  Frame(const Vector3D &facing, const Vector3D &upIn = Eks::Vector3D(0.0f, 1.0f, 0.0f), const Vector3D &alternativeUp = Eks::Vector3D(1.0f, 0.0f, 0.0f))
    {
    _facing = facing;
    _up = upIn;
    if(_up.dot(_facing) > 0.8f)
      {
      _up = alternativeUp;
      }
    _across = _up.cross(_facing);
    _up = _facing.cross(_across);
    }
  };

}

#endif // XFRAME_H
